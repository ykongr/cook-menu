// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Menu {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Int
  createdAt   DateTime @default(now())
}