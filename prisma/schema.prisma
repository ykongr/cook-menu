// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// 1. ジャンル（和食、イタリアンなど）を管理
model Category {
  id        Int      @id @default(autoincrement())
  name      String   // ジャンル名（例: "パスタ", "サラダ"）
  menus     Menu[]   // 1つのジャンルに複数のメニューが紐付く
  createdAt DateTime @default(now())
}

// 2. メニュー（料理名）を管理
model Menu {
  id          Int          @id @default(autoincrement())
  name        String       // 料理名
  description String?
  categoryId  Int?
  category    Category?     @relation(fields: [categoryId], references: [id])
  ingredients Ingredient[] 
  createdAt   DateTime     @default(now())
}

// 3. 具材（素材名とその量）を管理
model Ingredient {
  id        Int    @id @default(autoincrement())
  name      String 
  amount    String 
  menuId    Int
  menu      Menu   @relation(fields: [menuId], references: [id])
}